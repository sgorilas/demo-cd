pipeline {
     agent any
     stages {


         stage('compile') {
                     steps {
                     sh 'chmod +x mvnw'
                     sh './mvnw clean compile'
                     }
                 }
         stage('unit test') {
                     steps {
                         sh './mvnw clean test'
                     }
                 }


                 stage('build') {
                             steps {
                                 sh './mvnw -DskipTests package'
                             }
                         }

                          stage('coverage') {
                              steps {
                                  sh './mvnw jacoco:report'
                              }
                          }

                          stage('quality') {
                                 steps {
                                     sh './mvnw checkstyle:checkstyle'
                                 }
                             }


                             stage('build docker') {
                                         steps {
                                         sh 'ls -al'
                                             sh 'docker build  .'
                                         }
                                     }
     }

 }